@model WebAppScarpe_CoSabrinaCinque.Entities.Article

@{
    ViewData["Title"] = "Article Details";
}

<h1 class="text-center my-5">@Model.Name</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Prezzo
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Descrizione
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Immagine di copertina
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.CoverImagePath" width="200" />
        </dd>
        <dt class="col-sm-2">
            Immagine aggiuntiva 1
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.AdditionalImagePath1" width="200" />
        </dd>
        <dt class="col-sm-2">
            Immagine aggiuntiva 2
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.AdditionalImagePath2" width="200" />
        </dd>
    </dl>
</div>
<div class="text-center my-5">
    <a asp-action="Articles" class="btn btn-outline-success">Ritorna alla lista</a>
</div>
