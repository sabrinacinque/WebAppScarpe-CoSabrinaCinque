@model WebAppScarpe_CoSabrinaCinque.Models.ArticleInputModel

@{
    ViewData["Title"] = "Crea Articolo";
}

<h1 class="text-center my-4">Crea Articolo</h1>

<div class="container">
    <div class="row justify-content-center mb-5">
        <div class="col-6">
            <form asp-action="Create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" class="col-form-label"></label>
                    <div class="input-group">
                        <input asp-for="Name" class="form-control" placeholder="Inserisci il nome dell'articolo" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="col-form-label"></label>
                    <div class="input-group">
                        <input asp-for="Price" class="form-control" placeholder="Inserisci il prezzo dell'articolo" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="col-form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Inserisci una descrizione dettagliata dell'articolo"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Cover" class="col-form-label"></label>
                    <input asp-for="Cover" type="file" class="form-control-file" />
                    <span asp-validation-for="Cover" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdditionalImage1" class="col-form-label"></label>
                    <input asp-for="AdditionalImage1" type="file" class="form-control-file" />
                    <span asp-validation-for="AdditionalImage1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdditionalImage2" class="col-form-label"></label>
                    <input asp-for="AdditionalImage2" type="file" class="form-control-file" />
                    <span asp-validation-for="AdditionalImage2" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success mt-5">Crea</button>
                </div>
            </form>
        </div>
    </div>
</div>
